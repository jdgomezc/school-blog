---
import WhatsApp from '@/assets/whatsapp.svg';
import Facebook from '@/assets/facebook.svg';
import Phone from '@/assets/phone.svg';

const contacts: Contact[] = [
  {
    name: 'WhatsApp',
    Icon: WhatsApp,
    link: 'https://wa.me/50212345678',
    label: '1234-5678',
  },
  {
    name: 'Facebook',
    Icon: Facebook,
    link: 'https://www.facebook.com/escuela25deseptiembre',
    label: 'Escuela 25 de Septiembre',
  },
  {
    name: 'Número de teléfono',
    Icon: Phone,
