---
import Layout from '@/layouts/Layout.astro';
import Carousel from "@/components/ImagesCarousel"
import Post from "@/components/Post.astro"
import Logo from "@/assets/logo.png";

const apiURL = new URL("/api/posts/index.json", Astro.url);

const posts: Post[] = await fetch(apiURL, {
          method: 'GET',
        })
		.then(res => res.json())
		.then(data => {
			return data;
		});

---

<Layout home="true">
	<Carousel client:load />
	<article class="px-8 2xl:px-24 py-16 grid grid-cols-3 gap-y-16 w-full justify-items-center relative">
		<div
			class="absolute inset-0 -z-10"
			style={`
				background-image: url(${Logo.src});
				background-repeat: no-repeat;
				background-position: center;
				background-size: contain;
				opacity: 0.15; /* Adjust opacity for "clean" effect, 0.05 for very subtle */
			`}
		/>
		{
			posts.map(({id, title, description, date, type, author}) => (
				<Post
					id={id}
					title={title}
					content={description}
					date={date}
					type={type}
					author={author}
				/>
			))
		}
	</article>
</Layout>
