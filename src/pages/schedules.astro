---
import Layout from '../layouts/Layout.astro';
import Post from "../components/Post.astro";

const apiURL = new URL("/api/posts/filtered.json?type=SCHEDULE", Astro.url);

const posts: Post[] = await fetch(apiURL, {
          method: 'GET',
        })
		.then(res => res.json())
		.then(data => {
			return data;
		});
---

<Layout>
	<article class="px-24 py-16 grid grid-cols-3 gap-y-16 w-full justify-items-center">
		{
			posts.length > 0 ? (
			posts
				.map(({id, title, description, date, type, author}) => (
					<Post
						id={id}
						title={title}
						content={description}
						date={date}
						type={type}
						author={author}
					/>
				))
			) : (
				<p>No hay cronogramas publicados</p>
			)
		}
	</article>
</Layout>
